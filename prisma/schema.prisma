  OPENAI
  ANTHROPIC
}

// Add new enum for conversation types
enum ConversationType {
  TEXT
  VOICE
  MULTIMODAL
}

// Add new enum for memory types
enum MemoryType {
  CONVERSATION
  USER_PREFERENCE
  TASK_CONTEXT
  SYSTEM
